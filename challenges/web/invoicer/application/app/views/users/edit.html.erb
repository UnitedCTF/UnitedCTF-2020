<h1>Edit Profile</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="text-danger">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control", required: true, placeholder: "Name" %>
  </div>

  <!-- NOTE: Every account except the internal account is in demo for the moment. -->
  <!--
  <div class="form-group form-check">
    <%= f.check_box :demo, class: "form-check-input" %>
    <%= f.label :demo, class: "form-check-label" %>
    <small class="form-text text-muted">Features are limited in demo.</small>
  </div>
  -->

  <button type="submit" class="btn btn-primary">Update</button>
<% end %>
